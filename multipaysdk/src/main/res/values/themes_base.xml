<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.App" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>

        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>

        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>

        <item name="android:textColor">?attr/colorSecondary</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MultiPaySdk.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MultiPaySdk.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MultiPaySdk.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MultiPaySdk.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MultiPaySdk.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MultiPaySdk.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MultiPaySdk.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MultiPaySdk.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MultiPaySdk.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MultiPaySdk.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MultiPaySdk.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MultiPaySdk.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MultiPaySdk.Overline</item>
    </style>

    <style name="Base.Theme.MultiPaySdk" parent="Base.Theme.App">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/keppel</item>
        <item name="colorPrimaryVariant">@color/como</item>
        <item name="colorSecondary">@color/blackcurrant</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/carmine</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorControlHighlight">@color/clear_day</item>
    </style>

    <style name="Base.ThemeOverlay.MultiPaySdk.ListBackground" parent="Base.Theme.MultiPaySdk">
        <item name="android:colorBackground">@color/white_blur</item>
    </style>

</resources>